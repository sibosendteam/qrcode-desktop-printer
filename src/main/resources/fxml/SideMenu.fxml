                        <!--<FontAwesomeIconView glyphName="INFO_CIRCLE" size="1.8em"-->
                                             <!--styleClass="option-jfx-list-view-icon"/>-->
                    <!--</StackPane>-->
                <!--</graphic>-->
            <!--</Label>-->
